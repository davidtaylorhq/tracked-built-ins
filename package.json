{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tracked-tools/tracked-built-ins.git"
  },
  "license": "MIT",
  "author": "Chris Hewell Garrett",
  "scripts": {
    "prepare": "cd addon && pnpm run build",
    "release": "release-it",
    "lint": "pnpm --filter '*' lint",
    "test": "cd test-app && pnpm run test:ember"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@release-it-plugins/workspaces": "^3.2.0",
    "release-it": "^15.5.0",
    "typescript": "^5.4.2"
  },
  "volta": {
    "node": ">= 22"
  },
  "packageManager": "pnpm@9.14.2",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "before:init": "cp README.md LICENSE.md addon/",
      "after:bump": "pnpm install"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "addon"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-app/package.json"
          ],
          "versionUpdates": [
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
